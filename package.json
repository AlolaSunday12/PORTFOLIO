    "nodemon": "^3.0.1",
    "router": "^1.3.8"
  },
  "devDependencies": {
    "eslint-plugin-jest": "^27.6.0",
    "helmet": "^4.6.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.test.js",
          "**/*.test.jsx"
        ],
        "env": {
          "jest": true
        }
      }
    ]
  },
  "engines": {
    "node": "14.x", // Specify the version of Node.js
    "npm": "6.x"    // Specify the version of npm
  },
  "directories": {
    "client": "client" // Specify the client directory
  },
  "scripts": {
